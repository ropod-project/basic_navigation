#! /usr/bin/env python

import rospy
import traceback
from basic_navigation.osm_navigation import OSMNavigation

if __name__ == "__main__":
    rospy.init_node('topological_navigation')
    OSMN = OSMNavigation()
    CONTROL_RATE = rospy.get_param('~control_rate', 2.0)
    RATE = rospy.Rate(CONTROL_RATE)
    rospy.on_shutdown(OSMN._reset_state)
    try:
        while not rospy.is_shutdown():
            OSMN.run_once()
            RATE.sleep()
    except Exception as e:
        if type(e) != rospy.exceptions.ROSInterruptException:
            rospy.logerr(str(e))
            traceback.print_exc()
    rospy.loginfo('Exiting.')
